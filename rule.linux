COBJS = $(addprefix $(OUTDIR)/, $(notdir $(patsubst %.c, %.o, $(CSOURCES))))

AOBJS = $(addprefix $(OUTDIR)/, $(notdir $(patsubst %.S, %.o, $(ASOURCES))))

.PHONY: all $(SUBDIRS)

all: $(COBJS) $(AOBJS) $(SUBDIRS)
$(TARGET): $(COBJS) $(AOBJS)

$(COBJS): $(CSOURCES)
	@echo "CC $@"
	$(CC) $(CFLAGS) -o $@ $(filter $(*F).c, $(CSOURCES))

$(AOBJS): $(ASOURCES)
	@echo "AS $@"
	$(AS) $(AFLAGS) -o $@ $(filter $(*F).S, $(ASOURCES))

$(SUBDIRS):
	$(MAKE) -C $@

